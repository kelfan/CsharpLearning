<UserControl x:Class="RAP.Views.userControls.labelTextboxUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <!--this will display a label--> 
            <Label x:Name="ucLabel" />
            <!--this will display the content related to the label-->
            <TextBlock x:Name="ucTextBlock" TextWrapping="WrapWithOverflow" Text="{Binding Path=Object.Text}"/>
        </StackPanel>
    </Grid>
</UserControl>
